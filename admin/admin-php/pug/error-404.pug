extends include/_head
block append head
  -
    var pageTitle = '404'
    var headTitle = pageTitle + pageTitleDesc
block body
  .wrapper
    include include/_header
    include include/_aside-left
    .content-wrapper
      section.content-header
        h1
          | 404 Hata!
        ol.breadcrumb
          li
            a(href='index.html')
              i.fa.fa-dashboard
              |  Kontrol Paneli
          li.active 404 Hata!
      section.content
        .error-page
          h2.headline  404
          .error-content
            h3
              i.fa.fa-warning
              |  Aradığınız sayfayı bulamadık!
            p
              | Biz sizin gitmek istediğiniz sayfayı bulamadık!.
              | İsterseniz
              | 
              a(href='index.html') Anasayfaya dönebilir
              |  ya da arama çubuğunu kullanabilirsiniz.
            form.search-form
              .input-group
                input.form-control(type='text', name='search', placeholder='Arama yap')
                .input-group-btn
                  button.btn.btn-primary.btn-flat(type='submit', name='submit')
                    i.fa.fa-search
    include include/_footer
    include include/_aside-right
      .control-sidebar-bg
  include include/_script
  script.
    $.sessionTimeout({
    message: 'Oturumunuz bir dakika içinde kilitlenecektir.',
    keepAliveUrl: 'index.html',
    logoutUrl: 'girisyap.html',
    redirUrl: 'oturum-kilidi.html',
    warnAfter: 3000,
    redirAfter: 5000
    });
extends include/_head
block append head
  -
    var pageTitle = 'Yeni Kullanıcı Ekle'
    var headTitle = pageTitle + pageTitleDesc
    var bodyClass = 'hold-transition register-page'
block body
  .register-page-after
    .register-box
      .register-box-body.text-center
        a(href='index.html')
          img(src='img/logo-akyar-insaat-01.png', alt='akyarinsaatlogo')
        hr
        p.login-box-msg Kullanıcı Kayıt Formu
        form(action='index.html', method='get')
          .form-group.has-feedback
            input.form-control(type='text', placeholder='Kullanıcı Adı')
            span.glyphicon.glyphicon-user.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='email', placeholder='E-Posta')
            span.glyphicon.glyphicon-envelope.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='password', placeholder='Parola')
            span.glyphicon.glyphicon-lock.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='password', placeholder='Tekrar Parola')
            span.glyphicon.glyphicon-log-in.form-control-feedback
          .row
            .col-xs-8
              a.login-box-link.pull-left(href='giris-yap.html') Zaten Üyeyim
            .col-xs-4
              button.btn.btn-primary.btn-block(type='submit') Kaydet
  include include/_script
  script(type='text/javascript').
    $(document).ajaxStart(function () {
    Pace.restart()
    })
  script.
    $(function () {
    $('input').iCheck({
    checkboxClass: 'icheckbox_square-blue',
    radioClass: 'iradio_square-blue',
    increaseArea: '20%'
    });
    });
  script.
    $.sessionTimeout({
    message: 'Oturumunuz bir dakika içinde kilitlenecektir.',
    keepAliveUrl: 'index.html',
    logoutUrl: 'girisyap.html',
    redirUrl: 'oturum-kilidi.html',
    warnAfter: 3000,
    redirAfter: 5000
    });